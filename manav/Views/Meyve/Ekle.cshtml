@using manav.ViewModel;
@model MeyveEkleViewModel

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="content-wrapper" style="min-height: 1157.2px;">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>MEYVE YÖNETİMİ</h1>
                </div>

            </div>
        </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <!-- left column -->
                <div class="col-md-12">
                    <!-- general form elements -->
                    <!-- /.card -->
                    <!-- general form elements -->
                    <!-- /.card -->
                    <!-- Input addon -->
                    <!-- /.card -->
                    <!-- Horizontal Form -->
                    <div class="card card-info">
                        <div class="card-header">
                            <h3 class="card-title">Meyve Ekle</h3>
                        </div>
                        <!-- /.card-header -->
                        <!-- form start -->
                        <form class="form-horizontal" asp-controller="Meyve" asp-action="Ekle" method="post">
                            <div asp-validation-summary="All" class="text-danger"></div>
                            <div class="card-body">
                                <div class="form-group row">
                                    <label for="inputEmail3" class="col-sm-2 col-form-label">Meyve Adı</label>
                                    <div class="col-sm-10">
                                        <input type="text" class="form-control" name="MeyveAdı" id="inputEmail3" placeholder="Armutt etc...">
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <select class="custom-select rounded-0" id="exampleSelectRounded0" name="KategoriID">
                                        <option value="0">...KATEGORİ SEÇİNİZ...</option>
                                        
                                        @foreach ( Kategori kategori in Model.KategoriListesi)
                                        {
                                            <option value="@kategori.KategoriID">@kategori.KategoriAdı</option>
                                        }
                                        
                                        
                                    </select>
                                </div>

                                <div class="form-group row">
                                    <select class="custom-select rounded-0" id="exampleSelectRounded0" name="RenkID">
                                        <option value="0">...RENK SEÇİNİZ...</option>

                                        @foreach (Renk renk in Model.RenkListesi)
                                        {
                                            <option value="@renk.RenkID">@renk.RenkAdı</option>
                                        }
                                    </select>
                                </div>
                            </div>
                            <!-- /.card-body -->
                            <div class="card-footer">
                                <input type="submit" class="btn btn-info" value="KAYDET">
                                <a asp-controller="Meyve" asp-action="Liste" class="btn btn-default float-right">Listeye Dön</a>
                            </div>
                            <!-- /.card-footer -->
                        </form>
                    </div>
                    <!-- /.card -->

                </div>
                <!--/.col (left) -->
                <!-- right column -->
                <!--/.col (right) -->
            </div>
            <!-- /.row -->
        </div><!-- /.container-fluid -->
    </section>
    <!-- /.content -->
</div>